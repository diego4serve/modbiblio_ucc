<%= form_tag books_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
<% end %>
<br />
<table>
  <tr>
    <th>Isbn</th>
    <th>Titulo</th>
    <th>Editorial</th>
    <th>Descripci칩n</th>
    <th>Autor(es)</th>
    <th>Ejemplares</th>
  </tr>
  <% for book in @books %>
    <tr>
      <td><%= book.isbn %></td>
      <td><%= book.title %></td>
      <td><%= book.editorial %></td>
      <td><%= book.description %></td>
      <td>
        <% for author in book.authors %>
          <p><%= author.name %></p>
        <% end %>
      </td>
      <td>
        <% for copy in book.copies %>
          <p><%= copy.code %></p>
          <% if can? :create, Request %>
            <%= link_to "Reservar", new_request_path(:code => copy.code) %>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to "Mostrar", book %></td>
      <% if can? :update, @books %>
        <td><%= link_to "Editar", edit_book_path(book) %></td>
        <td><%= link_to "Eliminar", book, :confirm => 'Est치 seguro?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<% if can? :create, @books %>
  <p><%= link_to "Nuevo Libro", new_book_path(book) %> </p>
<% end %>

