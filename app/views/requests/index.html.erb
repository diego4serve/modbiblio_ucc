<%= title "Listado de Solicitudes" %>
<table>
  <tr>
    <th>User</th>
    <th>Copy</th>
    <th>Activated</th>
    <th>Request date</th>
    <th>Delivery date</th>
    <th>Return date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.user_id %></td>
    <td><%= request.copy_id %></td>
    <td><%= request.activated %></td>
    <td><%= request.request_date %></td>
    <td><%= request.delivery_date %></td>
    <td><%= request.return_date %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

