<h1>Listado de Usuarios</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Password</th>
    <th>Esadmin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.isadmin %></td>
    <td><%= link_to 'Mostrar', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
    <td><%= link_to 'Eliminar', user, :confirm => 'Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

