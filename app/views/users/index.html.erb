<table>
  <tr>
    <th>Nombre</th>
    <th>Password</th>
    <th>Esadmin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.isadmin %></td>
    <td><%= link_to 'Mostrar', user %></td>
    <% if can? :update, user %>
      <td><%= link_to 'Editar', edit_user_path(user) %></td>
    <% end %>
    <% if can? :destroy, user %>
      <td><%= link_to 'Eliminar', user, :confirm => 'Esta seguro?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

